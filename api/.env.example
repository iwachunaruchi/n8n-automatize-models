# Configuración de entorno para la API
# Copiar a .env y modificar según tu configuración

# MinIO Configuration
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minio
MINIO_SECRET_KEY=minio123
MINIO_SECURE=false

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=true

# Model Configuration
MODEL_PATH=../outputs/checkpoints/gradual_transfer_final.pth
DEVICE=auto  # auto, cuda, cpu

# Buckets
BUCKET_DEGRADED=document-degraded
BUCKET_CLEAN=document-clean
BUCKET_RESTORED=document-restored
BUCKET_TRAINING=document-training

# Processing Limits
MAX_FILE_SIZE=50MB
MAX_BATCH_SIZE=100
CONCURRENT_JOBS=3

# n8n Integration
N8N_WEBHOOK_URL=http://localhost:5678/webhook/document-processed
N8N_API_KEY=your_n8n_api_key_here
